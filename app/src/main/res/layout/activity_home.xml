<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="20dp"
            android:background="#388E3C"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:menu="@menu/menu_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/homeViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>


                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_to_the_jungle"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#2C2C2C"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />

                <Button
                    android:id="@+id/btnAnimalSounds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/play_animal_sound_game"
                    android:backgroundTint="#388E3C"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/guessAnimalButton"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_quiz_24"
                            android:contentDescription="Guess Animal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quick_guess"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/arSnapshotButton"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_games_24"
                            android:contentDescription="AR Zoo" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ar_snapshot"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zooChatBotButton"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_chat_24"
                            android:contentDescription="Zoo ChatBot" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zoo_chatbot"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/eventImage"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_image_bg"
                            android:contentDescription="Event Image" />

                        <LinearLayout
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/eventName"
                                android:text="@string/event_name"
                                android:textColor="#222"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/eventTime"
                                android:text="@string/event_time"
                                android:textColor="#4CAF50"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discover"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="28dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/discover_bg"
                            android:src="@drawable/img_10"
                            android:contentDescription="Animal 1" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="@string/fun_fact_of_the_day"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Elephants can recognize themselves in mirrors"
                    android:textSize="16sp"
                    android:textColor="#444" />

                <Button
                    android:id="@+id/planTitle"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/plan_your_visit"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#388E3C"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#388E3C"
            app:tabTextColor="#FFFFFF"
            app:tabSelectedTextColor="#000000"
            app:tabIndicatorColor="#000000"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/baseline_home_24"
                android:id="@+id/tab_home" />

            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/baseline_map_24"
                android:id="@+id/tab_map" />

            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/img_3"
                android:id="@+id/tab_animals" />

            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/baseline_event_note_24"
                android:id="@+id/tab_events" />

            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/baseline_location_pin_24"
                android:id="@+id/tab_directions" />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
